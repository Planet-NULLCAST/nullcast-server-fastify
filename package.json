{
  "name": "fastify-server",
  "version": "1.1.0",
  "private": "true",
  "description": "Nullcact v2 fastify server",
  "main": "dist/server/server.js",
  "types": "index.d.ts",
  "scripts": {
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/server/server.js",
    "build": "tsc -p ./tsconfig.json",
    "postinstall": "husky install",
    "release": "standard-version",
    "dev": "nodemon",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "init-tables": "node ./initialize-tables.js",
    "create-seed": "ts-node ./seed-db.ts",
    "migrate": "ts-node ./scripts/migrate/index.ts",
    "add-points": "ts-node ./scripts/activity-points/index.ts",
    "cron": "ts-node ./server/cron/index.ts",
    "map": "ts-node ./server/cron/site-map-generation.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">= 1.17.3",
    "node": ">= 12.5.0"
  },
  "lint-staged": {
    "./**/*.{js,ts,json,md}": [
      "eslint"
    ]
  },
  "keywords": [],
  "author": "Nullcast",
  "license": "ISC",
  "dependencies": {
    "@tryghost/html-to-mobiledoc": "^0.7.17",
    "@tryghost/image-transform": "^1.0.13",
    "@tryghost/kg-card-factory": "^3.1.0",
    "@tryghost/kg-default-atoms": "^3.1.0",
    "@tryghost/kg-default-cards": "^5.15.11",
    "@tryghost/kg-mobiledoc-html-renderer": "^5.3.1",
    "@types/prettier": "^2.4.2",
    "bcrypt": "^5.0.1",
    "cheerio": "^1.0.0-rc.10",
    "fastify": "^3.18.0",
    "fastify-auth": "^1.1.0",
    "fastify-cookie": "^5.3.1",
    "fastify-cors": "^6.0.2",
    "fastify-postgres": "^3.5.0",
    "fastify-socket.io": "^2.0.0",
    "fastify-swagger": "^4.8.2",
    "got": "^11.8.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "node-cron": "^3.0.0",
    "nodemailer": "^6.6.5",
    "oembed-parser": "^1.4.7",
    "pg": "^8.7.1",
    "prettier": "^2.5.1",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/lodash": "^4.14.172",
    "@types/node": "^15.12.5",
    "@types/nodemailer": "^6.4.4",
    "@types/pg": "^8.6.0",
    "@types/validator": "^13.6.3",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "mongoose": "^6.0.11",
    "nodemon": "^2.0.12",
    "standard-version": "^9.3.1",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.10.1",
    "tslint": "^6.1.3",
    "typescript": "^4.3.4"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules",
      "dist",
      "test",
      "coverage"
    ],
    "watch": [
      "server"
    ],
    "exec": "tsc -p ./tsconfig.json &&  npm start",
    "ext": "ts"
  }
}

{
  "name": "fastify-server",
  "version": "1.0.0",
  "description": "Nullcact v2 fastify server",
  "main": "dist/server/server.js",
  "scripts": {
    "start": ". ./load-env.sh && node ./dist/server/server.js",
    "build": "node_modules/typescript/bin/tsc -p ./tsconfig.json",
    "dev": "node_modules/nodemon/bin/nodemon.js",
    "init-tables": ". ./load-env.sh && node ./initialize-tables.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Nullcast",
  "license": "ISC",
  "dependencies": {
    "fastify": "^3.18.0",
    "fastify-auth": "^1.1.0",
    "fastify-postgres": "^3.5.0",
    "fastify-swagger": "^4.8.2",
    "pg": "^8.6.0"
  },
  "devDependencies": {
    "@types/node": "^15.12.5",
    "@types/pg": "^8.6.0",
    "nodemon": "^2.0.7",
    "typescript": "^4.3.4"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules",
      "dist",
      "test",
      "coverage"
    ],
    "watch": [
      "server"
    ],
    "exec": "node_modules/typescript/bin/tsc -p ./tsconfig.json &&  npm start",
    "ext": "ts"
  }
}
